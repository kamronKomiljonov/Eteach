// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,  // ✅ Bu liniyani qo'shing
    "noUnusedLocals": false, // ✅ Agar kerak bo'lsa
    "noUnusedParameters": false // ✅ Agar kerak bo'lsa
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}